{
  "extends": "@repo/typescript/next.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@/auth/*": ["./src/lib/auth/*"],
      "@/files/*": ["./src/lib/files/*"],
      "@/chat/*": ["./src/lib/chat/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
